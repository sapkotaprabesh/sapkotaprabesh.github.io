    <script>
        // Navigation between pages
        document.addEventListener('DOMContentLoaded', function() {
            const navItems = document.querySelectorAll('.nav-item');

            // Add click events to nav items
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    const pageId = this.getAttribute('data-page');
                    alert(`Navigating to ${pageId} page. In a real application, this would load the corresponding page.`);

                    // Update active nav item
                    navItems.forEach(item => {
                        item.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });

            // Checkout button functionality
            const checkoutBtn = document.getElementById('checkout-btn');
            checkoutBtn.addEventListener('click', function() {
                alert('Checkout functionality would open a modal to select a user and set a due date.');
            });

            // View buttons in circulation history
            const viewButtons = document.querySelectorAll('.history-table .action-btn');
            viewButtons.forEach(button => {
                button.addEventListener('click', function() {
                    alert('This would show detailed information about the specific circulation record.');
                });
            });

            // Pagination buttons
            const paginationButtons = document.querySelectorAll('.history-section .action-btn');
            paginationButtons.forEach(button => {
                if (button.textContent.includes('Previous') || button.textContent.includes('Next')) {
                    button.addEventListener('click', function() {
                        alert(`Pagination: ${this.textContent.trim()} page`);
                    });
                }
            });

            // Book action buttons
            const bookActionButtons = document.querySelectorAll('.book-actions .action-btn');
            bookActionButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const action = this.textContent.trim();
                    if (action === 'Edit Book Details') {
                        alert('This would open a form to edit book details.');
                    } else if (action === 'Print Details') {
                        alert('Printing book details...');
                    } else if (action === 'Check Out Book') {
                        alert('Checkout functionality would open a modal to select a user and set a due date.');
                    } else if (action === 'View Full History') {
                        alert('This would show the complete circulation history for this book.');
                    } else if (action === 'Remove from Library') {
                        const confirmDelete = confirm('Are you sure you want to remove this book from the library? This action cannot be undone.');
                        if (confirmDelete) {
                            alert('Book removed from library. In a real application, this would delete the book record.');
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
